{
    "name": "NotificarSolicitante",
    "version": "1.0.0",
    "description": "Notifica Solicitante do Chamado",
    "manifest_version": 3,
    "author": "William Civa",
    "action": {
        "default_title": "NotificarSolicitante"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "declarativeContent"
    ],
    "content_scripts": [ {
        "js": [ "content.js" ],
        "matches": [ "http://helpdesk.baspan.com.br/*" ],
        "persistent": true,
        "synchronous": true
    } ],
    "host_permissions": [
        "http://helpdesk.baspan.com.br/*"
    ]
}